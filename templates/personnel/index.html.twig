{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin - Personnels{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Liste des personnels</h1>

    {% if personnels is empty %}
        <div class="alert alert-info">Aucun personnel trouvé.</div>
    {% else %}
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Poste</th>
                </tr>
            </thead>
            <tbody>
                {% for personnel in personnels %}
                    <tr>
                        <td>{{ personnel.id }}</td>
                        <td>{{ personnel.nom }}</td>
                        <td>{{ personnel.prenom }}</td>
                        <td>{{ personnel.poste }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
